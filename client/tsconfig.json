// client/tsconfig.json
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5", // För bred webbläsarkompatibilitet
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext", // Vite använder ES Modules
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true, // Vite kräver detta för snabbare bygg
    "noEmit": true, // Vite hanterar bygg, ingen emit från TS
    "jsx": "react-jsx", // För React 17+
    "noFallthroughCasesInSwitch": true,
    "rootDir": "../" // Ändrat till client/ som bas, eftersom Vite fungerar relativt till klientmappen
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../shared/**/*.ts",
    "vite-env.d.ts"  
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../server"
  ]
}